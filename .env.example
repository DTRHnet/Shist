# Environment configuration for Shist application
# Copy this file to .env and replace placeholder values with actual values

# Application configuration
NODE_ENV=development
PORT=5000
LOCAL_DEV=true

# Database configuration (PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/shist

# Session security (generate with: openssl rand -hex 32)
SESSION_SECRET=REPLACE_ME_WITH_SECURE_RANDOM_STRING

# Optional: PostgreSQL credentials for Docker Compose
POSTGRES_PASSWORD=REPLACE_ME_WITH_SECURE_PASSWORD

# Replit-specific (only needed when deploying to Replit)
# REPL_ID=your-repl-id
# REPLIT_DOMAINS=your-domain.replit.dev

# Development settings
# Set to true to use local authentication instead of Replit OIDC
LOCAL_DEV=true