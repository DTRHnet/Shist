{
  "version": 2,
  "buildCommand": "npm install && npm run vercel-build",
  "outputDirectory": "client/dist",
  "rewrites": [
    { "source": "/api/:match*", "destination": "/api/:match*" },
    { "source": "/assets/:match*", "destination": "/assets/:match*" }, 
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
