{
  "version": 2,
  "buildCommand": "npm run vercel:build",
  "outputDirectory": "dist/public",
  "functions": {
    "dist/index.js": {
      "memory": 1024,
      "maxDuration": 10,
      "regions": ["iad1", "sfo1"]
    }
  },
  "routes": [
    { "src": "/api/(.*)", "dest": "dist/index.js" },
    { "handle": "filesystem" },
    { "src": "/.*", "dest": "dist/public/index.html" }
  ],
  "crons": [
    {
      "path": "/api/invitations/cleanup",
      "schedule": "0 4 * * *"
    }
  ]
}
